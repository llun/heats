{% extends "root.njk" %}

{% block head %}
{% endblock %}

{% block navigation %}
  {% include "authenticated/navigation.njk" %}
{% endblock %}

{% block content %}
<div class="container mt-2">
  {% if flash %}
  <div class="alert {{ 'alert-danger' if flash.type == 'error' else flash.type }}" role="alert">
    {{ flash.message }}
  </div>
  {% endif %}
  <form action="/activities" method="post" enctype="multipart/form-data">
    <div class="mb-2">
      <label for="upload" class="form-label">
        GPX, TCX, Fit or Strava backup file
      </label>
      <input type="file" name="upload" class="form-control" />
    </div>
    <input type="hidden" name="_csrf" value="{{ csrf }}">
    <button type="submit" class="btn btn-primary">Upload</button>
  </form>
</div>
{% endblock %}