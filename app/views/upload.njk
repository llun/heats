{% extends "root.njk" %}

{% block head %}
{% endblock %}

{% block navigation %}
<div class="navbar-nav">
  <a class="nav-link" href="/activities/upload">Upload</a>
  <a class="nav-link" href="/users/signout">Sign out</a>
</div>
{% endblock %}

{% block content %}
<div class="container">
  {% if flash %}
  <div class="alert {{ 'alert-danger' if flash.type == 'error' else flash.type }}" role="alert">
    {{ flash.message }}
  </div>
  {% endif %}
  <form action="/activities" method="post" enctype="multipart/form-data">
    <div class="mb-3">
      <label for="upload" class="form-label">
        GPX, TCX or Fit file
      </label>
      <input type="file" name="upload" class="form-control" />
    </div>
    <input type="hidden" name="_csrf" value="{{ csrf }}">
    <button type="submit" class="btn btn-primary">Upload</button>
  </form>
</div>
{% endblock %}